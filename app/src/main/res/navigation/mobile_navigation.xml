<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_login">

    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.team1.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/activity_login" />
    <action
        android:id="@+id/action_login_to_home"
        app:destination="@id/nav_home" />

    <fragment
        android:id="@+id/nav_register"
        android:name="com.example.team1.ui.login.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/activity_register" />

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.team1.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.team1.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_calender"
        android:name="com.example.team1.ui.calender.CalenderFragment"
        android:label="@string/menu_calender"
        tools:layout="@layout/fragment_calender" />
</navigation>
